<header class="navbar">
  <a href="index.astro" class="logo-container">
    <img src="/img/logo.webp" alt="WeShelter logo" class="logo" />
  </a>
  <button class="burger-menu" id="burger-menu" aria-label="Menu">
    <span></span>
    <span></span>
    <span></span>
  </button>
  <nav class="nav-container" id="nav-container">
    <ul class="nav-links">
      <li><a href="#">Få hjælp</a></li>
      <li><a href="#" class="highlight">Bliv frivillig</a></li>
      <li><a href="#">Om</a></li>
      <li><a href="#">Kontakt</a></li>
      <li>
        <a href="#" class="search-icon">
          <img src="/img/soge.webp" alt="Søge ikon" />
        </a>
      </li>
      <li><a href="#" class="button">STØT</a></li>
    </ul>
  </nav>
</header>

<style>
  header.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    position: fixed;
    width: 100%;
    box-sizing: border-box;
    transition: background-color 0.3s ease-in-out;
    z-index: 1000;
  }

  header.navbar.scrolled {
    background-color: rgba(15, 23, 42, 0.85);
  }

  .nav-container {
    display: flex;
    align-items: center;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 35px;
  }

  .nav-links li {
    display: inline-block;
  }

  .nav-links a:not(.search-icon) {
    position: relative;
    text-decoration: none;
    color: white;
    font-size: 18px;
    transition: color 0.3s ease-in-out;
  }

  .nav-links a:not(.search-icon):not(.button)::after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: -5px;
    width: 0;
    height: 1px;
    background-color: #fe8f2c;
    transition:
      width 0.3s ease-in-out,
      left 0.3s ease-in-out;
  }

  .nav-links a:not(.search-icon):hover::after {
    width: 100%;
    left: 0;
  }

  .nav-links a:hover {
    color: #fe8f2c;
  }

  .nav-links a.highlight {
    color: #fe8f2c;
  }

  .search-icon img {
    width: 30px;
  }

  .button {
    background-color: #0067ff;
    padding: 10px 20px;
    border-radius: 50px;
    transition:
      background-color 0.3s ease-in-out,
      color 0.3s ease-in-out;
  }

  .button:hover {
    background-color: white;
    color: #0067ff !important;
  }

  .burger-menu {
    display: none;
  }

  @media (max-width: 768px) {
    .logo-container {
      z-index: 1100;
    }

    .burger-menu {
      display: flex;
      flex-direction: column;
      gap: 5px;
      background: none;
      border: none;
      cursor: pointer;
      z-index: 1100;
    }

    .burger-menu span {
      display: block;
      width: 30px;
      height: 3px;
      background-color: white;
      transition: 0.3s;
    }

    .nav-container {
      position: fixed;
      top: -100%;
      left: 0;
      width: 100%;
      max-height: 295px;
      background-color: rgba(15, 23, 42, 0.85);
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-top: 70px;
      transition: top 0.3s ease-in-out;
      z-index: 900;
      overflow: hidden;
    }

    .nav-container.open {
      top: 0;
    }

    .nav-links {
      flex-direction: column;
      gap: 20px;
    }

    .nav-links a {
      font-size: 20px;
      color: white;
    }

    /* Burger-menu animation */
    .burger-menu.open span:nth-child(1) {
      transform: translateY(8px) rotate(45deg);
    }

    .burger-menu.open span:nth-child(2) {
      opacity: 0;
    }

    .burger-menu.open span:nth-child(3) {
      transform: translateY(-8px) rotate(-45deg);
    }
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const navbar = document.querySelector(".navbar");
    const burgerMenu = document.getElementById("burger-menu");
    const navContainer = document.getElementById("nav-container");

    window.addEventListener("scroll", () =>
      navbar.classList.toggle("scrolled", window.scrollY > 0)
    );

    burgerMenu.addEventListener("click", () => {
      navContainer.classList.toggle("open");
      burgerMenu.classList.toggle("open");
    });
  });
</script>
