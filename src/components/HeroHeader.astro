---
const { backgroundImage, title } = Astro.props;
---

<header
  class="hero-header"
  style={`background-image: url('${backgroundImage}')`}
>
  <h1>{title}</h1>
</header>

<style>
  .hero-header {
    height: 630px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-header h1 {
    color: white;
    font-size: 7rem;
  }
</style>
