<style>
  .volunteers {
    margin-top: 2px;
  }

  .title {
    text-align: center;
    font-size: 3rem;
    margin-bottom: 20px;
    font-weight: 400;

    font-family: Arial, Helvetica, sans-serif;
  }

  /* üñ•Ô∏è Standard: Grid layout p√• store sk√¶rme */
  .volunteer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
    margin-bottom: 100px;
  }

  .slide {
    flex: 0 0 100%;
    scroll-snap-align: center;
  }

  /* Skjul radio buttons */
  input[type="radio"] {
    display: none;
  }

  /* Vis prikker kun p√• mobil */
  .dots {
    display: flex;
    justify-content: center;
    margin-top: 10px;
    display: none;
  }

  .dot {
    height: 10px;
    width: 10px;
    margin: 0 5px;
    background-color: #b5b1b1;
    border-radius: 50%;
    display: inline-block;
    cursor: pointer;
  }
  /* Skift slide ved klik p√• prikker */
  #slide1:checked ~ .volunteer-grid {
    transform: translateX(0%);
  }
  #slide2:checked ~ .volunteer-grid {
    transform: translateX(-100%);
  }
  #slide3:checked ~ .volunteer-grid {
    transform: translateX(-200%);
  }

  /* Marker aktiv prik */
  #slide1:checked ~ .dots label:nth-child(1),
  #slide2:checked ~ .dots label:nth-child(2),
  #slide3:checked ~ .dots label:nth-child(3) {
    background-color: #555; /* M√∏rkere prik n√•r aktiv */
