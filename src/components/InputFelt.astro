---
const { label, type = "text", name } = Astro.props;
---

<div class="input-felt">
  <div class="input-container">
    <input type={type} id={name} name={name} required />
    <label for={name}>{label}</label>
  </div>
</div>

<style>
  .input-felt {
    position: relative;
    margin: 20px 0;
  }

  .input-container input {
    width: 100%;
    padding: 0;
    font-size: 15px;
    color: #893f5f;
    border: none;
    border-bottom: 1.5px solid #893f5f;
    outline: none;
  }

  .input-container label {
    position: absolute;
    left: 0;
    font-size: 15px;
    color: #893f5f;
    transition: all 0.4s ease;
  }

  /* Hover */
  .input-container:hover label {
    font-weight: bold;
  }

  /* Klik */
  .input-container input:focus + label,
  .input-container input:valid + label {
    top: -15px;
    font-size: 10px;
    font-weight: bold;
  }
</style>
