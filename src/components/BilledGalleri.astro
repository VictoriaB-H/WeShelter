---
const billeder = [
  "/img/img1.webp",
  "/img/img2.webp",
  "/img/img3.webp",
  "/img/img4.webp",
  "/img/img5.webp",
  "/img/img6.webp",
  "/img/img7.webp",
  "/img/img8.webp",
];
---

<div class="billed-galleri">
  {
    billeder.map((billede, index) => (
      <img
        src={billede}
        alt={`Galleri billede ${index + 1}`}
        class={`billede-${index + 1}`}
      />
    ))
  }
</div>

<style>
  .billed-galleri {
    display: grid;
    grid-template-columns: repeat(5, 1fr);

    gap: 10px;
    max-width: 400px;
  }

  .billed-galleri img {
    width: 100%;
    height: auto;
  }

  /* **************************************************** */

  @keyframes wavy-motion {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .billed-galleri img {
    animation: wavy-motion 3s infinite ease-in-out;
  }

