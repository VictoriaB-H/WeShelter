---
const billeder = [
  "/img/img1.webp",
  "/img/img2.webp",
  "/img/img3.webp",
  "/img/img4.webp",
  "/img/img5.webp",
  "/img/img6.webp",
  "/img/img7.webp",
  "/img/img8.webp",
];
---

<div class="billed-galleri">
  {
    billeder.map((billede, index) => (
      <img
        src={billede}
        alt={`Galleri billede ${index + 1}`}
        class={`billede-${index + 1}`}
      />
    ))
  }
</div>

<style>
  .billed-galleri {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 10px;
    max-width: 400px;
  }

  .billed-galleri img {
    width: 100%;
    height: auto;
  }

  /* Placering af billeder i grid */
  .billede-1 {
    grid-column: 5 / 6;
    grid-row: 1 / 2;
  }
  .billede-2 {
    grid-column: 3 / 4;
    grid-row: 2 / 4;
  }
  .billede-3 {
    grid-column: 4 / 6;
    grid-row: 2 / 4;
  }
  .billede-4 {
    grid-column: 1 / 3;
    grid-row: 3 / 5;
  }
  .billede-5 {
    grid-column: 1 / 3;
    grid-row: 5 / 7;
  }
  .billede-6 {
    grid-column: 3 / 6;
    grid-row: 4 / 7;
  }
  .billede-7 {
    grid-column: 3 / 5;
    grid-row: 7 / 8;
  }
  .billede-8 {
    grid-column: 5 / 5;
    grid-row: 7 / 9;
  }
</style>
