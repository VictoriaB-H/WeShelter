---
const { image, hoverImage, overskrift, beskrivelse, link } = Astro.props;
---

<article class="card">
  <a href={link}>
    <img src={image} alt={overskrift} class="card-image default" />
    <img src={hoverImage} alt={overskrift} class="card-image hover" />
  </a>
  <h3>{overskrift}</h3>
  <details>
    <summary>+</summary>
    <p>{beskrivelse}</p>
  </details>
</article>

<style>
  .card {
    position: relative;
    text-align: left;
    width: 100%;
    max-width: 300px;
    display: flex;
    flex-direction: column;
  }

  .image-container {
    position: relative;
    display: block;
    width: 100%;
    height: auto;
  }
  .card a {
    display: block;
    position: relative;
    width: 100%;
  }

  .card-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: auto;
    transition: opacity 0.3s ease-in-out;
    display: block;
  }

  .card-image.default {
    opacity: 1;
    position: relative;
  }

  .card-image.hover {
    opacity: 0;
    position: absolute;
  }

  .card:hover .card-image.default {
    opacity: 0;
  }

  .card:hover .card-image.hover {
    opacity: 1;
  }
  h3 {
    font-size: 1.3rem;
    font-weight: 300;
    font-family: Arial, Helvetica, sans-serif;
    margin: 0;
  }
  .card-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-top: 5px;
  }
  details {
    cursor: pointer;
    margin-top: 5px;
    border-top: 1px solid #000; /* Sort streg over */
    border-bottom: 1px solid #000; /* Sort streg under */
  }

  summary {
    font-size: 1.5rem;

    list-style: none;
  }

  details p {
    margin-top: 5px;
    font-family: Arial, Helvetica, sans-serif;
  }
  @media (max-width: 768px) {
    .card {
      flex: 0 0 80%;
      max-width: 100%;
      scroll-snap-align: center;
    }
  }
</style>
