---
import Layout from "../layouts/Layout.astro";
import HeroHeader from "../components/HeroHeader.astro";
import Breadcrumb from "../components/Breadcrumb.astro";
import Section1 from "../components/Section1.astro";
import Section2 from "../components/Section2.astro";
import Location from "../components/Location.astro";
import Formular from "../components/Formular.astro";
import BilledGalleri from "../components/BilledGalleri.astro";
import BilledGalleri2 from "../components/BilledGalleri2.astro";
import Section3 from "../components/Section3.astro";
---

<Layout>
  <main>
    <HeroHeader backgroundImage="img/mad-klubber.webp" title="MAD KLUBBER" />

    <Breadcrumb />
    <Section1 />
    <Section2 />
    <Section3 />

    <section class="formular-container">
      <div class="gallery-container"><BilledGalleri /></div>
      <div><Formular /></div>
      <div class="gallery-container"><BilledGalleri2 /></div>
    </section>
  </main>
</Layout>

<style>
  .location-section {
    position: relative;
    padding: 20px;
    overflow: hidden;
  }

  .locations {
    max-height: 160px; /* Standard begrænset højde */
    overflow: hidden;
    transition: max-height 0.5s ease-in-out;
  }

  .more-locations {
    display: none;
  }

  /* Skjult checkbox */
  .toggle-checkbox {
    display: none;
  }

  /* Style til knap */
  .toggle-button {
    display: block;
    margin: 10px auto 0;
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    text-align: center;
    transition: transform 0.3s ease-in-out;
    width: 100%;
  }

  /* Når checkbox er checked */
  .toggle-checkbox:checked ~ .locations {
    max-height: 1000px; /* Udvider sektionen */
  }

  .toggle-checkbox:checked ~ .locations .more-locations {
    display: block;
  }

  /* Roter pilen når dropdown er åben */
  .toggle-checkbox:checked ~ .toggle-button {
    transform: rotate(180deg);
  }

  .formular-container {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 20px 0;
  }

  @media (max-width: 1050px) {
    .gallery-container {
      display: none;
    }
  }
</style>
