  <style>
    .volunteers {
      margin-top: 2px;
    }
    .title {
      text-align: center;
      font-size: 3rem;
      margin-bottom: 50px;
      font-weight: 400;
      margin-top: -50px;
    }

    /* üñ•Ô∏è Standard: Grid layout p√• store sk√¶rme */
    .volunteer-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 30px;
      max-width: 1200px;
      margin: 0 auto;
    }

    .dots {
      display: none; /* Skjul prikker p√• store sk√¶rme */
    }
    .dot {
      display: none; /* Skjul prikker p√• store sk√¶rme */
    }

    /* Skjul radio buttons */
    input[type="radio"] {
      display: none;
    }

    /* üì± Mobil: Skjul scrollbar */
    @media (max-width: 768px) {
      .slider-container {
        width: 100%;
        overflow: hidden;
        position: relative;
      }
      .volunteer-grid {
        display: flex;
        overflow-x: auto; /* Beholder scroll-funktionen */
        scroll-snap-type: x mandatory;
        scroll-behavior: smooth;
        width: 100%;
        max-width: 400px;
        white-space: nowrap;
        -ms-overflow-style: none; /* Skjuler scrollbar i Internet Explorer og Edge */
        scrollbar-width: none; /* Skjuler scrollbar i Firefox */
      }

      .volunteer-grid::-webkit-scrollbar {
        display: none; /* Skjuler scrollbar i Chrome, Safari og Opera */
      }

      .slide {
        flex: 0 0 100%;
        scroll-snap-align: center;
      }

      /* Skjul radio buttons */
      input[type="radio"] {
        display: none;
      }

      /* Vis prikker kun p√• mobil */
      .dots {
        display: flex;
        justify-content: center;
        margin-top: 10px;
      }

      .dot {
        height: 10px;
        width: 10px;
        margin: 0 5px;
        background-color: #bbb;
        border-radius: 50%;
        display: inline-block;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
      }

      /* S√∏rg for at radio buttons skifter billede */
      #slide1:checked ~ .slider-container .volunteer-grid {
        transform: translateX(0%);
      }
      #slide2:checked ~ .slider-container .volunteer-grid {
        transform: translateX(-100%);
      }
      #slide3:checked ~ .slider-container .volunteer-grid {
        transform: translateX(-200%);
      }

      /* Marker aktiv prik */
      #slide1:checked ~ .dots label:nth-child(1),
      #slide2:checked ~ .dots label:nth-child(2),
      #slide3:checked ~ .dots label:nth-child(3) {
        background-color: #555; /* M√∏rkere prik n√•r aktiv */
      }
    }

    .description {
      font-size: 1rem;
      text-align: center;
      max-width: 100%;
      padding: 10px;
    }

    h3 {
      text-align: center;
      font-family: Arial, Helvetica, sans-serif;
      font-size: 2.9rem;
      margin-bottom: 0;
    }

    .cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      padding: 2%;
    }
    .aktivitets-cards {
      margin: 70px;
